{
    "status"           : "ok",
    "name"             : "{{ stratum1.name }}",
    "id"               : {{ stratum1.id }},
    "fqrn"             : "{{ repo.manifest.repository_name }}",
    "version"          : "{{ repo.version }}",
    "revision"         : "{{ repo.manifest.revision }}",
    "rest_api"         : "{{ repo.has_rest_api }}",
    "replicating"      : "{{ repo.replicating }}",
  {% if repo.last_replication|date:"Y" != '1970' %}
    "last_replication" : "{{ repo.last_replication.isoformat }}"
  {% else %}
  	"last_replication" : "unknown"
  {% endif %}
}